<interface>
  <!-- interface-license-type gplv3 -->
  <!-- interface-name GNOME Podcasts -->
  <!-- interface-description A podcast client for the GNOME Desktop -->
  <!-- interface-copyright 2022 - 2024 -->
  <!-- interface-authors nee -->
  <template class="PdDiscoveryPage" parent="AdwNavigationPage">
    <property name="tag">discovery</property>
    <property name="title" translatable="yes">Add Podcasts</property>
    <child>
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar" id="header">
          </object>
        </child>
        <child>
          <object class="GtkScrolledWindow">
            <property name="vexpand">True</property>
            <property name="hexpand">True</property>
            <property name="hscrollbar-policy">never</property>
            <child>
              <object class="AdwClamp">
                <property name="vexpand">True</property>
                <property name="maximum-size">700</property>
                <child>
                  <object class="GtkBox">
                    <property name="vexpand">True</property>
                    <property name="orientation">vertical</property>
                    <property name="margin-top">18</property>
                    <property name="margin-bottom">18</property>
                    <property name="margin-start">18</property>
                    <property name="margin-end">18</property>
                    <style>
                      <class name="content"/>
                    </style>
                    <!-- Search -->
                    <child>
                      <object class="GtkLabel">
                        <property name="halign">start</property>
                        <property name="label" translatable="yes">Search</property>
                        <style>
                          <class name="heading"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel" id="entry_description">
                        <property name="halign">start</property>
                        <property name="margin-top">8</property>
                        <property name="margin-bottom">8</property>
                        <property name="label" translatable="yes">Enter a feed URL or search the selected platforms.</property>
                        <style>
                          <class name="dim-label"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox">
                        <property name="halign">fill</property>
                        <property name="spacing">10</property>
                        <child>
                          <object class="GtkEntry" id="entry">
                            <accessibility>
                              <relation name="labelled-by">entry_description</relation>
                            </accessibility>
                            <!-- <property name="margin-end">20</property> -->
                            <property name="hexpand">True</property>
                            <property name="truncate-multiline">True</property>
                            <property name="receives-default">True</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="search_button">
                            <property name="tooltip-text" translatable="yes">Submit search</property>
                            <property name="icon-name">system-search-symbolic</property>
                          </object>
                        </child>
                        <child>
                          <object class="AdwSpinner" id="loading_spinner">
                            <property name="tooltip-text" translatable="yes">Loadingâ€¦</property>
                            <property name="visible">False</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel" id="no_platforms_selected_label">
                        <property name="visible">False</property>
                        <property name="halign">start</property>
                        <property name="margin-top">8</property>
                        <property name="label" translatable="yes">Please enable a Search Platform below, or enter a http(s) feed URL.</property>
                        <property name="wrap">True</property>
                        <style>
                          <class name="error"/>
                        </style>
                      </object>
                    </child>

                    <!-- Platform switches -->
                    <child>
                      <object class="AdwPreferencesGroup" id="list">
                        <property name="margin-top">18</property>
                        <property name="title" translatable="yes">Search Platforms</property>
                        <property name="description" translatable="yes">Search queries will be sent to these platforms.</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
